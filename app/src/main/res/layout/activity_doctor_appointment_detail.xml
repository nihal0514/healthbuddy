            android:layout_marginStart="75dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="204dp"
            android:text="Dr Yassmine Alaoui PÃ©diatre, 11 Avenue Al Abtal, Rabat"
            android:textColor="#B9B9B9"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etChooseTime"
            android:layout_width="391dp"
            android:layout_height="120dp"
            android:layout_above="@+id/btn_doctor_appoint"
            android:layout_below="@id/doctor_about_appoint"
            android:layout_centerInParent="true"
            android:layout_marginBottom="-53dp"
            android:hint="Choose the time" />


        <Button
            android:id="@+id/btn_doctor_appoint"
            android:layout_width="412dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/doctor_about_appoint"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="-2dp"
            android:layout_marginTop="69dp"
            android:layout_marginEnd="2dp"
            android:visibility="gone"
            android:text="Book Appointment" />


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>