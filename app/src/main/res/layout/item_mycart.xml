<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@color/color9">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_name_product_shop_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Product Name :         "
                android:textColor="@color/Black" />

            <TextView
                android:id="@+id/tv_name_product_shop_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@+id/tv_name_product_shop_tv"
                android:text="@string/multivitamins"
                android:textColor="@color/Black" />

            <TextView
                android:id="@+id/tv_price_quantity_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_name_product_shop_1"
                android:text="Price per Quantity:    "
                android:textColor="@color/Black" />

            <TextView
                android:id="@+id/tv_price_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_name_product_shop_1"
                android:layout_toRightOf="@id/tv_price_quantity_tv"
                android:text="Price "
                android:textColor="@color/Black" />
            <TextView
                android:id="@+id/tv_total_quantity_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity:               "
                android:layout_below="@id/tv_price_quantity"
                android:textColor="@color/Black"
                android:layout_margin="6dp"/>

            <TextView
                android:id="@+id/tv_total_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_price_quantity"
                android:layout_marginStart="6dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="6dp"
                android:layout_toRightOf="@+id/tv_total_quantity_tv"
                android:text="Quantity"
                android:textColor="@color/Black" />
            <TextView
                android:id="@+id/tv_total_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TotalPrice:            "
                android:layout_below="@id/tv_total_quantity_tv"
                android:textColor="@color/Black"
                android:layout_margin="6dp"/>

            <TextView
                android:id="@+id/tv_total_price_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_total_quantity_tv"
                android:layout_marginStart="6dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="6dp"
                android:layout_marginBottom="6dp"
                android:layout_toRightOf="@id/tv_total_price_tv"
                android:text="TotalPrice"
                android:textColor="@color/Black" />


        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>


</RelativeLayout>